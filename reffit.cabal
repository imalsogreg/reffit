  default-language: Haskell2010
  hs-source-dirs: test
  type: exitcode-stdio-1.0
  main-is: TestSuite.hs
  ghc-options: -fhpc
  build-depends:
    base >= 4.4 && < 5,
    blaze-html,
    acid-state,
    aeson,
    bytestring >= 0.9.1 && < 0.11,
    cereal,
    containers,
    digestive-functors,
    digestive-functors-blaze,
    digestive-functors-heist,
    digestive-functors-snap,
    errors,
    hashable,
    heist >= 0.13 && < 1.1,
    HUnit,
    lens        >= 4.0,
    lens-aeson,
    MonadCatchIO-transformers >= 0.3.1.0 && < 0.4,
    mtl >= 2 && < 3,
    postgresql-simple,
    QuickCheck,
    reffit,
    safe,
    safecopy,
    snap-extras >= 0.9 && < 1,
    snaplet-acid-state >= 0.2.5 && < 0.3,
    snaplet-postgresql-simple,
    snap >= 0.13 && < 1.1,
    snap-core  >= 0.9 && < 1.1,
    snap-server  >= 0.9 && < 1.1,
    snap-loader-static  >= 0.9 && < 1.1,
    test-framework,
    test-framework-hunit,
    test-framework-quickcheck2,
    text,
    text-icu,
    time >= 1.1 && < 1.5,
    transformers-compat,
    unordered-containers,
    xmlhtml >= 0.1





